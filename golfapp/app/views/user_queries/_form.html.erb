<div class="max-w-3xl mx-auto my-8">
  <div class="bg-white shadow-lg rounded-lg border border-neutral-light">

    <div class="bg-primary text-text-on-primary px-6 py-4 rounded-t-lg">
      <h1 class="text-2xl font-heading font-extrabold mb-0">Ask a Golf Rule Question</h1>
    </div>

    <div class="p-6">

      <% if @user_query.errors.any? %>
        <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-6" role="alert">
          <h4 class="font-bold text-lg mb-2"><%= pluralize(@user_query.errors.count, "error") %> prohibited this question from being saved:</h4>
          <ul class="mt-2 list-disc list-inside">
            <% @user_query.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with(model: @user_query, local: true, class: "space-y-6", novalidate: true) do |form| %>
        <div class="mb-4">
          <%= form.label :content, "Your Question:", class: "block text-neutral-dark text-lg font-semibold mb-2" %>
          <%= form.text_area :content,
                              rows: 7,
                              class: "shadow-sm appearance-none border border-neutral-medium rounded w-full py-3 px-4 text-neutral-dark leading-tight focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-200 resize-y",
                              placeholder: "e.g., What happens if my ball accidentally hits another player's ball?",
                              required: true %>
          <div class="text-red-600 text-sm mt-1">
            Please enter your question.
          </div>
        </div>

        <div class="flex justify-center mt-6">
          <%= form.submit "Get Answer",
              class: "w-full sm:w-auto bg-primary hover:bg-secondary text-text-on-primary font-bold py-3 px-6 rounded-lg focus:outline-none focus:shadow-outline transform transition-all duration-300 ease-in-out hover:scale-105 cursor-pointer" %>
        </div>
      <% end %>

    </div>
  </div>
</div>